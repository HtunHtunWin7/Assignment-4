<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_double"

    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Cancel"
            android:textColor="@color/button_color"
            android:textSize="@dimen/r2_txt_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Filter"
            android:textColor="@color/black"
            android:textSize="@dimen/r2_txt_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Reset"
            android:textColor="@color/button_color"
            android:textSize="@dimen/r2_txt_size"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_double"
        android:text="SORT BY"
        android:textSize="@dimen/r2_txt_size" />

    <TextView
        android:layout_marginTop="@dimen/padding_double"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_double"
        android:drawableEnd="@drawable/ic_details_black_24dp"
        android:background="@drawable/rectangle_shape"
        android:text="@string/price"/>

    <TextView
        android:layout_marginTop="@dimen/padding_double"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RATING"
        android:textSize="@dimen/txt_22"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal_spacing"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape"
            android:gravity="center"
            android:layout_marginTop="@dimen/normal_spacing"
           android:paddingBottom="@dimen/normal_spacing"
            android:paddingTop="@dimen/normal_spacing"
            android:text="NONE" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_spacing"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape"
            android:drawableEnd="@drawable/ic_star_black_24dp"
            android:gravity="center"
            android:padding="@dimen/normal_spacing"
            android:text="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_spacing"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape"
            android:drawableEnd="@drawable/ic_star_black_24dp"
            android:gravity="center"
            android:padding="@dimen/normal_spacing"
            android:text="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_spacing"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape"
            android:drawableEnd="@drawable/ic_star_black_24dp"
            android:gravity="center"
            android:padding="@dimen/normal_spacing"
            android:text="3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_spacing"
            android:layout_weight="1"
            android:background="@drawable/txt_background"
            android:drawableEnd="@drawable/ic_star_black_24dp"
            android:gravity="center"
            android:padding="@dimen/normal_spacing"
            android:text="4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_spacing"
            android:layout_marginStart="@dimen/normal_spacing"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape"
            android:drawableEnd="@drawable/ic_star_black_24dp"
            android:gravity="center"
            android:padding="@dimen/normal_spacing"
            android:text="5" />


    </LinearLayout>


    <TextView

        android:layout_marginTop="@dimen/padding_double"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRICE RANGE"
        android:textSize="@dimen/txt_22"
        android:layout_marginBottom="@dimen/padding_double"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:src="@drawable/price"
        android:scaleType="center"/>
    <LinearLayout
        android:layout_marginTop="@dimen/triple_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/normal_spacing"
            android:layout_weight="4"
            android:background="@drawable/txt_background"
            android:text="Search"
            android:textColor="@color/white" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/txt_background"
            android:src="@drawable/ic_map_black_24dp"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>